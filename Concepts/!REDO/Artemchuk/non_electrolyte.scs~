non_electrolyte
=> nrel_main_idtf:
        [nonelectrolyte](*<- lang_en;;*);
        [неэлектролит](*<- lang_ru;;*);

<- rrel_key_sc_element:...
(*
        <- sc_definition;;
        => nrel_main_idtf: [Def.(Nonelectrolyte)](*<- lang_en;;*);;
        => nrel_main_idtf: [Опр.(Неэлектролит)](*<- lang_ru;;*);;
        <= nrel_sc_text_translation:...
        (*
                -> rrel_example:
                [Неэлектролиты — вещества, водные растворы и расплавы которых не проводят электрический ток, так как их молекулы не диссоциируют на ионы.]
                (*
                        <- lang_ru;;
                        => nrel_format: format_html;;
                *);
                [Nonelectrolytes - substance melts and aqueous solutions which do not conduct electricity, as their molecules do not dissociate into ions.]
                (*
                        <- lang_en;;
                        => nrel_format: format_html;;
                *);;
        *);;
*);;
